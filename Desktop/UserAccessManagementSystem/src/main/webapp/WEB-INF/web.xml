<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>com.akansh.web.Servlets.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/SignUpServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.akansh.web.Servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SoftwareServlet</servlet-name>
    <servlet-class>com.akansh.web.Servlets.SoftwareServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SoftwareServlet</servlet-name>
    <url-pattern>/create-software</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestServlet</servlet-name>
    <servlet-class>com.akansh.web.Servlets.RequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestServlet</servlet-name>
    <url-pattern>/request-access</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ApprovalServlet</servlet-name>
    <servlet-class>com.akansh.web.Servlets.ApprovalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApprovalServlet</servlet-name>
    <url-pattern>/approve</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
</web-app>